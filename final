DELETE FROM pfm.pfm_top1mcg t
USING (
    SELECT ctid
    FROM (
        SELECT
            ctid,
            ROW_NUMBER() OVER (
                PARTITION BY iin, product_code, period, period_type, upload_date
                ORDER BY ctid
            ) AS rn
        FROM pfm.pfm_top1mcg
        WHERE upload_date = CURRENT_DATE
    ) x
    WHERE rn > 1
) d
WHERE t.ctid = d.ctid;