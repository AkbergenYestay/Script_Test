WITH uuid_cte AS (
    SELECT gen_random_uuid()::text AS sid
)
UPDATE pfm_top_lmcg t
SET subscription_id = (SELECT sid FROM uuid_cte)
WHERE t.subscription_id IS NULL
  AND upload_date = CURRENT_DATE;

-- Передаём в workflow variable
SELECT SETVARIABLE('$$v_subscription_id',
       (SELECT subscription_id
        FROM pfm_top_lmcg
        WHERE upload_date = CURRENT_DATE
        ORDER BY upload_date DESC
        LIMIT 1)
);