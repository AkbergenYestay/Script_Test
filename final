import datetime

from airflow import DAG
from airflow.operators.python import PythonOperator
from airflow.models import Variable


default_args = {
    "owner": "Yestay",
    "depends_on_past": False,
}


def reset_variable():
    Variable.set(
        "pfm_acc_dep_openway_email_sent",
        "1970-01-01",
    )
    print("[INFO] Variable pfm_acc_dep_openway_email_sent manually reset to 1970-01-01")


with DAG(
    dag_id="pfm_reset_email_variable_manual",
    default_args=default_args,
    start_date=datetime.datetime(2025, 1, 1),
    schedule=None,          # ⛔ без расписания — только вручную
    catchup=False,
    tags=["pfm"],
) as dag:

    reset = PythonOperator(
        task_id="reset_email_variable_manual",
        python_callable=reset_variable,
    )

    reset