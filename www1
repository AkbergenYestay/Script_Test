JSON_OBJECT(
  'en' VALUE JSON_ARRAY(
    -- NEW: price.amount only
    JSON_OBJECT(
      'path' VALUE JSON_ARRAY('price','amount'),
      'replacements' VALUE JSON_OBJECT(
        '%(priceValue)' VALUE ROUND(amount)
      )
    ),

    -- NEW: price.currency only
    JSON_OBJECT(
      'path' VALUE JSON_ARRAY('price','currency'),
      'replacements' VALUE JSON_OBJECT(
        '%(currency)' VALUE '₸'
      )
    )
  ),

  'ru' VALUE JSON_ARRAY(
    JSON_OBJECT(
      'path' VALUE JSON_ARRAY('price','amount'),
      'replacements' VALUE JSON_OBJECT(
        '%(priceValue)' VALUE ROUND(amount)
      )
    ),
    JSON_OBJECT(
      'path' VALUE JSON_ARRAY('price','currency'),
      'replacements' VALUE JSON_OBJECT(
        '%(currency)' VALUE '₸'
      )
    )
  ),

  'kk' VALUE JSON_ARRAY(
    JSON_OBJECT(
      'path' VALUE JSON_ARRAY('price','amount'),
      'replacements' VALUE JSON_OBJECT(
        '%(priceValue)' VALUE ROUND(amount)
      )
    ),
    JSON_OBJECT(
      'path' VALUE JSON_ARRAY('price','currency'),
      'replacements' VALUE JSON_OBJECT(
        '%(currency)' VALUE '₸'
      )
    )
  )
) AS payload