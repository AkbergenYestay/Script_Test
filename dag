import datetime
import subprocess

from airflow import DAG
from airflow.operators.python import PythonOperator


DAG_ID = "pfm_acc_dep_openway_monitoring"

def unpause_dag():
    subprocess.run(
        ["airflow", "dags", "unpause", DAG_ID],
        check=True,
    )
    print(f"[INFO] DAG {DAG_ID} unpaused")


with DAG(
    dag_id="pfm_acc_dep_openway_unpause",
    start_date=datetime.datetime(2025, 1, 1),
    schedule="5 0 * * *",
    catchup=False,
    tags=["pfm"],
) as dag:

    unpause = PythonOperator(
        task_id="unpause_main_dag",
        python_callable=unpause_dag,
    )

    unpause