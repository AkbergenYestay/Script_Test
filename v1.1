CREATE TABLE IF NOT EXISTS target_schema.optimized_transactions (
    posting_date        DATE,
    card_id             STRING,
    trans_date          DATE,
    trans_amount        DECIMAL(18,2),
    trans_curr          STRING,
    fee_amount          DECIMAL(18,2),
    acc_amount          DECIMAL(18,2),
    end_balance         DECIMAL(18,2),
    acc_curr            STRING,
    tr_type             STRING,
    trans_country       STRING,
    trans_city          STRING,
    trans_details       STRING,
    mcc                 STRING,
    auth_code           STRING,
    ret_ref_number      STRING,
    dcc                 STRING
)
PARTITIONED BY (year INT, month INT, day INT)
STORED AS PARQUET;

